    <head>
        <meta charset="utf-8" />
        <!--[if IE]><meta http-equiv='X-UA-Compatible' content='IE=edge,chrome=1'><![endif]-->
        <title>SCM | <%= @page_title || 'Admin Area' %></title>
        <meta name="description" content="" />
        <meta name="viewport" content="width=device-width" />
        <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
        <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false&amp;key=AIzaSyATH7XLbF2tdxlGK5IvfOOiEcbn1D4AgoU"></script> 
        <%= stylesheet_link_tag    "main","normalize","normalize.min","ui-lightness/jquery-ui-1.10.3.custom.css","select2", :media => "all" %>
        <%= javascript_include_tag    "jquery-1.9.1","jquery-ui-1.10.3.custom","main","jquery.tablesorter", "addons/pager/jquery.tablesorter.pager.js","select2" %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a> or <a href="http://www.google.com/chromeframe/?redirect=true">activate Google Chrome Frame</a> to improve your experience.</p>
        <![endif]-->

        <div class="header-container">
            <header class="wrapper clearfix">
                <div id="search">
                    <%= form_for(:location, :url => {:action => 'create'}) do |f| %>
                    <%= f.text_field(:lookup, :placeholder => 'Search', :id=>'lookup', :width => '200') %>
                    <% end %>

                </div>
                <nav>
                    <ul>
                        <% if !session[:user_id] %>
                        <li><a href="/account/signin">Log In</a></li>
                        <li><a href="/account/signup">Sign Up</a></li>                        
                        <% else %>
                        <li><a href="/account/usr"><%= session[:email] %></a></li>
                        <li><a href="/account/signout">Log out</a></li>
                        <% end %>
                    </ul>
                </nav>
            </header>
        </div>

        <div class="main-container">
            <div class="main wrapper clearfix">

            <section id="acc-dashboard-section">

                <section id="acc-dashboard-section-nav">
                    <h3><a href="/admin">Dashboard</a></h3>
                    <hr />
                    <ul>
                        <li><a href="#/calendar/usr/">View Calendar</a></li>        
                        <li><a href="/items/">Items</a></li>
                        <li><a href="/locations/">Locations</a></li>
                        <li><a href="/contacts/">Contacts</a></li>
                        <li><a href="#/pending/">Pending</a></li>
                    </ul>
                    <hr />
                    <ul>    
                        <li><a href="#/social/usr/facebook">Post to Facebook</a></li>
                        <li><a href="#/social/usr/twitter">Tweet to Twitter</a></li>
                        <li><a href="#/social/usr/youtube">Upload to YouTube</a></li>
                    </ul>   
                </section>

                <section id="acc-dashboard-section-mc" class="mc-active">
                <%= yield %>
                </section>  

            </section>

            </div> <!-- #main -->
        </div> <!-- #main-container -->

        <div class="footer-container">
            <footer class="wrapper">
                <ul>
                    <li><a href="#">About</a></li>
                    <li><a href="#">Businesses</a></li>
                    <li><a href="#">Developers</a></li>
                    <li><a href="#">Help</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                    <li><a href="#">Terms of Use</a></li>
                </ul>               
                <h3 id="copyright">Cirrus Era &copy; <%= Time.now.year %></h3>
                <br class="clr" />
            </footer>
        </div>

        <script>
            /*
            var _gaq=[['_setAccount','UA-XXXXX-X'],['_trackPageview']];
