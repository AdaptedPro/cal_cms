<!DOCTYPE html>
<html>
<head>
  <title>CalCms | <%= @page_title || 'Admin Area' %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<div id="header">
		<h1>CMS Admin</h1>
	</div>

	<div id="main">
		
		<% if !flash[:notice].blank? %>
		<div class="notice">
			<%= flash[:notice] %>
		</div>
		<% end %>
		
		<div id="content">
			<%= yield %>
		</div>	
	</div>

	<div id="footer">
		<p id="copyright">&copy; AJ</p>
	</div>

</body>
</html>
