<article class="content_holder delete">
	<section>
		<%= link_to("&laquo; Back to List".html_safe, {:action => 'list'}, :class => 'main_btn custom_btn') %>
	</section>

	<section>
		<h2>Delete Location</h2>
		<%= form_for(:location, :url => {:action => 'destroy', :id => @location.id}) do |f| %>
			<p>Are you sure you want to permanently delete this item?</p>
			<p><%= @location.location_address_1 %> <%= @location.location_address_2 %><br />
				<%= @location.location_city %>, <%= @location.location_state %><br />
				<%= @location.location_country %></p>
			<span class="save_btn custom_btn">
				<%= submit_tag("Delete item") %>
			</span>	
		<% end %>						
	</section>
</article>	