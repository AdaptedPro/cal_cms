<div class="form_frame">
	<% if !flash[:notice].blank? %>
	<div class="notice">
		<%= flash[:notice] %>
	</div>
	<% end %>
	<%= form_tag(:action => 'attempt_signup') do %>
		<table>
			<thead>
				<tr>
					<td>
						Already on Cirrus Era? <%= link_to("Sign in", {:action => 'signin'}, :class => 'prompt link') %>!
					</td>
				</tr>
				<tr>
					<td>
			        	<span class="text-input small-input">
			        		<%= text_field_tag(:first_name, nil, :id => 'first_name', :placeholder => 'First name') %>
			        	</span>
						&nbsp
						<span class="text-input small-input">	
							<%= text_field_tag(:last_name, nil, :id => 'last_name', :placeholder => 'Last name') %>
						</span>	
					</td>
				</tr>
				<tr>
					<td>
						<span class="text-input">
							<%= text_field_tag(:email, nil, :id => 'email', :placeholder => 'Email') %>
						</span>
					</td>	
				</tr>	
				<tr>
					<td>
						<span class="text-input">		
							<%= password_field_tag(:password, nil, :id => 'password', :placeholder => 'Password') %>
						</span>
					</td>
				</tr>
				<tr>
					<td>By clicking Join you confirm that you accept our <a href="/privacy">Privacy Policy</a> and <a href="/terms">Terms of Service</a>.</td>
				</tr>							
				<tr>
					<td>
						<div class="signin-button">
							<%= submit_tag("Join", :html => { :id => 'status'}) %>
						</div>	
					</td>
				</tr>
		</table>
	<% end %>

</div>