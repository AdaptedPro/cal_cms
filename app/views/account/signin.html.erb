<div class="form_frame">
  <% if !flash[:notice].blank? %>
  <div class="notice">
    <%= flash[:notice] %>
  </div>
  <% end %>
  <%= form_tag(:action => 'attempt_signin') do %>
    <table>
      <tr>
        <td>
          <%= link_to("(Forgot password)", {:action => 'recover'}) %>
        </td>
      </tr>
      <tr>
        <td>
          <span class="text-input">
            <%= text_field_tag(:email, nil, :id => 'email_field', :placeholder => 'Email') %>
          </span>
        </td>
      </tr>
      <tr>
        <td>
            <span class="text-input">
              <%= password_field_tag(:password, nil, :id => 'password_field', :placeholder => 'Password') %>
            </span>
        </td>
      </tr>
      <tr>
        <td>
          <span class="signin-button">
            <%= submit_tag("Sign In") %>
          </span>      
        </td>
      </tr>         
    </table>
  <% end %>  
</div>
<script type="text/javascript">
$(function() {
    $('input').bind('input', function() {
      $(this).val($(this).val().replace(/[^a-z0-9$.@'"\/-_]/gi, ''));
    });
});
</script>