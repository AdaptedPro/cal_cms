<style type="text/css">
#back_link a { color: #FFF; }
</style>
<div class="form_frame">	
	<div id="user_info">	
		  <% if !flash[:notice].blank? %>
		  <div class="notice">
		    <%= flash[:notice] %>
		  </div>
		  <% end %>		
		<section>
			<%= link_to("&laquo; Go to dashboard".html_safe, {:controller => 'dashboard', :action => 'index'}, :class => 'new main_btn custom_btn', :id => 'back_link') %>
		</section>	
		<%= form_for(@auth_user, :url => {:action => 'update', :id => @auth_user.id} ) do |f| %>		
		<span class="text-input">
			<%= f.text_field(:first_name, :placeholder => 'First Name', :class => 'form_put') %>
		</span>
		<br />
		<span class="text-input">
			<%= f.text_field(:last_name, :placeholder => 'Last Name', :class => 'form_put') %>
		</span>	
		<br />
		<span class="text-input">
			<%= f.email_field(:email, :placeholder => 'Email', :class => 'form_put') %>
		</span>
		<br />
		<span class="save_btn"><%= submit_tag("Save") %></span>	
		<% end %>	
	</div>
</div>	