	
<div class="contact list">
	<h2>Contacts</h2>

	<table class="tablesorter">
		<thead>
			<tr>
				<th></th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Email</th>
				<th>Phone</th>
				<th>Organization</th>
				<th>Actions</th>
			</tr>
		</thead>	
		<tbody>
			<% @contact.each do |contact| %>
			<tr>
				<td><%= contact.contact_title %></td>	 	 	 	 	 	 		
				<td><%= contact.contact_first_name %></td>	 	 	 	 	 	 		
				<td><%= contact.contact_last_name %></td>		 	 	 	 	 	 		
				<td><%= contact.contact_email %></td>	 	 	 	 	 	 		
				<td><%= contact.contact_phone %></td>	 	 	 	 	 	 		
				<td><%= contact.contact_organization %></td>
				<td><%= link_to("Show", {:action => 'show', :id => contact.id}, :class => 'action show')%></td>			
			</tr>
			<% end %>
		</tbody>	
	</table>
</div>	